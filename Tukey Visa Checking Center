  <script>
    let captcha1 = "", captcha2 = "";

    function generateCaptcha1() {
      const chars = "ABCDEFGHJKLMNPQRSTUVWXYZ23456789";
      let code = "";
      for (let i = 0; i < 5; i++) code += chars[Math.floor(Math.random()*chars.length)];
      captcha1 = code;
      document.getElementById("captchaImage").src = `https://dummyimage.com/120x40/ccc/000&text=${code}`;
    }

    function generateCaptcha2() {
      const chars = "ABCDEFGHJKLMNPQRSTUVWXYZ23456789";
      let code = "";
      for (let i = 0; i < 5; i++) code += chars[Math.floor(Math.random()*chars.length)];
      captcha2 = code;
      document.getElementById("captchaImage2").src = `https://dummyimage.com/120x40/ccc/000&text=${code}`;
    }

    function checkVisa() {
      const visaType = document.getElementById('visaType').value;
      const ref = document.getElementById('refno').value.trim();
      const pass = document.getElementById('passport').value.trim().toUpperCase();
      const captcha = document.getElementById('captcha').value.trim().toUpperCase();
      const resultEl = document.getElementById('result');

      const validWork = ["A09383772","A19059408","A19471732","A03748923"];
      const validTourist = ["A19471732","A03748923"];
      const validStudent = ["S10293847"];
      const validResidence = ["R99887766"];

      if (!ref || !pass || !captcha) {
        resultEl.innerText = "Please fill all fields.";
        resultEl.style.color = "red";
        return;
      }

      if (captcha !== captcha1) {
        resultEl.innerText = "Invalid captcha. Try again.";
        resultEl.style.color = "red";
        return;
      }

      let validList = [];
      switch(visaType){
        case "work": validList = validWork; break;
        case "tourist": validList = validTourist; break;
        case "student": validList = validStudent; break;
        case "residence": validList = validResidence; break;
      }

      if (validList.includes(pass)) {
        resultEl.innerText = `✅ ${visaType.toUpperCase()} Visa is VALID for passport ${pass}`;
        resultEl.style.color = "green";
      } else {
        resultEl.innerText = `❌ No record found for ${visaType} visa.`;
        resultEl.style.color = "red";
      }
    }

    function checkAppointment() {
      const citizen = document.getElementById('citizenType').value;
      const ref = document.getElementById('appointmentNo').value.trim();
      const id = document.getElementById('passportApp').value.trim().toUpperCase();
      const captcha = document.getElementById('captcha2').value.trim().toUpperCase();
      const result2 = document.getElementById('result2');

      if (!ref || !id || !captcha) {
        result2.innerText = "Please fill all fields.";
        result2.style.color = "red";
        return;
      }

      if (captcha !== captcha2) {
        result2.innerText = "Invalid captcha. Try again.";
        result2.style.color = "red";
        return;
      }

      if (id === "TR123456" || id === "P987654") {
        result2.innerText = `✅ Appointment found for ${citizen==="turkish"?"Turkish Citizen":"Foreign Citizen"} (${id})`;
        result2.style.color = "green";
      } else {
        result2.innerText = "❌ No appointment record found.";
        result2.style.color = "red";
      }
    }

    function toggleSection(section){
      const visaSec = document.getElementById('visaSection');
      const appSec = document.getElementById('appointmentSection');
      const visaBtn = document.getElementById('visaBtn');
      const appBtn = document.getElementById('appointmentBtn');

      if (section==='visa'){
        visaSec.style.display='block'; appSec.style.display='none';
        visaBtn.classList.add('active'); appBtn.classList.remove('active');
      } else {
        visaSec.style.display='none'; appSec.style.display='block';
        visaBtn.classList.remove('active'); appBtn.classList.add('active');
      }
    }

    window.onload=function(){
      generateCaptcha1(); generateCaptcha2();
      setInterval(generateCaptcha1,30000);
      setInterval(generateCaptcha2,30000);
    };
  </script>
</body>
